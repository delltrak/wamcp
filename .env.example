# MCP Server Authentication
# API key for bearer token auth. If unset, no auth (dev mode).
# WA_MCP_API_KEY=wamcp_sk_your_secret_key_here

# Transport mode: "http" (Streamable HTTP) or "stdio" (local dev)
WA_TRANSPORT=http

# HTTP port for Streamable HTTP transport
WA_MCP_PORT=3000

# Redis connection URL (required for BullMQ queues)
WA_REDIS_URL=redis://localhost:6379

# Pino log level: debug | info | warn | error
WA_LOG_LEVEL=info

# Days to keep messages before auto-pruning
WA_MESSAGE_RETENTION_DAYS=30

# Max messages/minute per Baileys instance
WA_BAILEYS_RATE_LIMIT=20

# Max messages/minute per Cloud API instance
WA_CLOUD_RATE_LIMIT=80

# Meta webhook verification token (Cloud API)
# WA_CLOUD_WEBHOOK_SECRET=your_meta_webhook_secret

# Separate port for Cloud API webhook receiver
WA_CLOUD_WEBHOOK_PORT=3001

# Max media cache size in MB before cleanup
WA_MEDIA_CACHE_MAX_MB=500

# Auto-reconnect Baileys instances on disconnect
WA_AUTO_RECONNECT=true

# Daily WhatsApp Web version auto-check
WA_VERSION_CHECK=true
